<div class="container">
  <div class="row">
    <div class="Absolute-Center is-Responsive">
      <%= render :partial => 'shared/flash_notice' %>
      <div id="logo-container"></div>
      <div class="col-sm-12 col-md-10 col-md-offset-1">
        <%= form_tag(:controller => "sessions", :action => "authorize_user", :method => "post", :id => "loginForm") do %>
          <div class="form-group input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= text_field_tag :username_or_email, "", :class => "form-control", :placeholder => "User Name" %>
          </div>
          <div class="form-group input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <%= password_field_tag :login_password, "", :class => "form-control", :placeholder => "Password" %>
          </div>
          <div class="form-group">
            <%= submit_tag("Log In", :id=>"signin", :class=>"btn btn-def btn-block", :name=>"submit") %>
          </div>
          <div class="form-group text-center">
            <%= link_to "New User", signup_path %>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
